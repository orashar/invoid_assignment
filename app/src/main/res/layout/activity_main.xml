<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Document"
        android:textSize="24dp"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_below="@id/text"
        android:layout_marginTop="26dp"
        android:text="Upload the document after clicking the button below"
        android:textSize="18dp"
        android:textColor="@color/design_default_color_secondary"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/img_done"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/design_default_color_primary"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="Document Uploaded SuccessFully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_done"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/desc2"
        android:visibility="gone"
        android:layout_marginTop="36dp"
        android:text="Update the document by clicking the update button below"
        android:layout_below="@id/img_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_upload"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Upload Adhar Card"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:src="@color/common_google_signin_btn_text_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>